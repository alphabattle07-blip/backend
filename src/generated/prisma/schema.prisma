generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  password    String
  name        String?
  battleBonus Int      @default(0)
  levelReward Int      @default(0)
  rating      Int      @default(1000)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Game statistics relationship
  gameStats GameStats[]

  // Online game relationships
  gamesAsPlayer1 Game[]        @relation("Player1")
  gamesAsPlayer2 Game[]        @relation("Player2")
  gameSessions   GameSession[]

  @@map("users")
}

model GameStats {
  id     String @id @default(cuid())
  userId String

  // Game identification
  gameId String

  // Game statistics
  wins   Int @default(0)
  losses Int @default(0)
  draws  Int @default(0)

  // Rating system
  rating Int @default(1000) // Rookie level starts at 1000

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, gameId])
  @@map("game_stats")
}

model Game {
  id       String @id @default(cuid())
  gameType String // "ayo", "whot", etc.

  // Players
  player1Id String
  player2Id String?

  // Game state
  status      GameStatus @default(WAITING) // WAITING, IN_PROGRESS, COMPLETED, ABANDONED
  board       Json? // Game board state
  currentTurn String? // Current player's turn
  winnerId    String?

  // Timestamps
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  startedAt DateTime?
  endedAt   DateTime?

  // Relations
  player1 User  @relation("Player1", fields: [player1Id], references: [id])
  player2 User? @relation("Player2", fields: [player2Id], references: [id])

  // Game sessions for real-time tracking
  sessions GameSession[]

  @@map("games")
}

model GameSession {
  id     String @id @default(cuid())
  gameId String
  userId String

  // Session state
  isConnected  Boolean  @default(true)
  lastActivity DateTime @default(now())

  // Relations
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([gameId, userId])
  @@map("game_sessions")
}

enum GameStatus {
  WAITING
  IN_PROGRESS
  COMPLETED
  ABANDONED
}
